<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Wrts" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/wrts_ab_selectable_bg</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Wrts</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Wrts</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Wrts</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Wrts</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Wrts</item>
        <item name="android:actionModeBackground">@drawable/style_cab_background_top_wrts</item>
        <item name="android:actionModeSplitBackground">@drawable/style_cab_background_bottom_wrts</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Wrts</item>
        <item name="android:windowBackground">@color/bg</item>

        <!-- Generated with http://android-holo-colors.com -->
        <item name="android:editTextBackground">@drawable/edit_text_holo_light</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_light</item>
        <item name="android:buttonStyle">@style/ButtonWrts</item>
        <item name="android:imageButtonStyle">@style/ImageButtonWrts</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarWrts</item>
        <item name="android:buttonStyleToggle">@style/ToggleWrts</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_holo_light</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Wrts.Widget</item>

    </style>

    <style name="ActionBar.Solid.Wrts" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/style_ab_solid_wrts</item>
        <item name="android:backgroundStacked">@drawable/style_ab_stacked_solid_wrts</item>
        <item name="android:backgroundSplit">@drawable/style_ab_bottom_solid_wrts</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Wrts</item>
    </style>

    <style name="ActionBar.Transparent.Wrts" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/style_ab_transparent_wrts</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Wrts</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Wrts.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Wrts</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Wrts</item>
    </style>

    <style name="ButtonWrts" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <style name="ImageButtonWrts" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <style name="ProgressBarWrts" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
    </style>

    <style name="ToggleWrts" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_holo_light</item>
    </style>

</resources>