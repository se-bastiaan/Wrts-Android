<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Wrts" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/wrts_ab_selectable_bg</item>
        <item name="popupMenuStyle">@style/PopupMenu.Wrts</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Wrts</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Wrts</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Wrts</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Wrts</item>
        <item name="actionModeBackground">@drawable/style_cab_background_top_wrts</item>
        <item name="actionModeSplitBackground">@drawable/style_cab_background_bottom_wrts</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Wrts</item>
        <item name="android:windowBackground">@color/bg</item>

        <!-- Generated with http://android-holo-colors.com -->
        <item name="android:editTextStyle">@style/EditTextWrts</item>
        <item name="android:checkboxStyle">@style/CheckBoxWrts</item>
        <item name="android:radioButtonStyle">@style/RadioButtonWrts</item>
        <item name="android:buttonStyle">@style/ButtonWrts</item>
        <item name="android:imageButtonStyle">@style/ImageButtonWrts</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarWrts</item>
        <item name="android:buttonStyleToggle">@style/ToggleWrts</item>
        <item name="android:listViewStyle">@style/ListViewWrts</item>
        <item name="android:listViewWhiteStyle">@style/ListViewWrts.White</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemWrts</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Wrts.Widget</item>

    </style>

    <style name="ActionBar.Solid.Wrts" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/style_ab_solid_wrts</item>
        <item name="backgroundStacked">@drawable/style_ab_stacked_solid_wrts</item>
        <item name="backgroundSplit">@drawable/style_ab_bottom_solid_wrts</item>
        <item name="progressBarStyle">@style/ProgressBar.Wrts</item>
    </style>

    <style name="ActionBar.Transparent.Wrts" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/style_ab_transparent_wrts</item>
        <item name="progressBarStyle">@style/ProgressBar.Wrts</item>
    </style>
	
    <style name="PopupMenu.Wrts" parent="@style/Widget.Sherlock.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/style_menu_dropdown_panel_wrts</item>	
    </style>
	
    <style name="DropDownListView.Wrts" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/wrts_ab_selectable_bg</item>
    </style>

    <style name="ActionBarTabStyle.Wrts" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/wrts_ab_tab_indicator</item>
    </style>
	
    <style name="DropDownNav.Wrts" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/wrts_ab_spinner_bg</item>
        <item name="android:popupBackground">@drawable/style_menu_dropdown_panel_wrts</item>
        <item name="android:dropDownSelector">@drawable/wrts_ab_selectable_bg</item>
    </style>
    
    <style name="ProgressBar.Wrts" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/wrts_horizontal_progress</item>
    </style>
    
    <style name="ActionButton.CloseMode.Wrts" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/wrts_cab_button_done</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Wrts.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Wrts</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Wrts</item>
    </style>

    <style name="EditTextWrts" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxWrts" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="RadioButtonWrts" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="ButtonWrts" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonWrts" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <style name="ProgressBarWrts" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ToggleWrts" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ListViewWrts" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="ListViewWrts.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="SpinnerItemWrts" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

</resources>