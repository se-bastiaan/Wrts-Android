<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
            android:id="@+id/topbarlayout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/topbar"
            android:orientation="vertical" >
			<ImageView
                android:id="@+id/LogoView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:src="@drawable/ic_menu_logo"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/textLogo"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/LogoView"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="19dp"
                android:textColor="#ffffff" />
            <RelativeLayout
            	android:id="@+id/topbarborder"
            	android:layout_width="fill_parent"
            	android:layout_height="1dp"
            	android:background="@color/topbarborder"
            	android:layout_alignParentBottom="true"
            	android:orientation="vertical" />
        </RelativeLayout>
        
    	<ScrollView
	        	android:layout_width="fill_parent"
	        	android:layout_height="fill_parent"
	       	 	android:id="@+id/TestScroll"
				android:orientation="vertical"
				android:background="@color/backcolor"
				android:paddingTop="10dp">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
		        	<TextView
					    android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
						android:id="@+id/lang1"
						android:textStyle="bold"
						android:color="@color/grey2"
						android:paddingBottom="1dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="15dp"/>
					<ImageView
					    android:contentDescription="@string/app_name"
					    android:layout_width="fill_parent"
	        			android:layout_height="2dp"
	        			android:layout_marginLeft="15dp"
						android:layout_marginRight="15dp"
						android:layout_marginTop="1dp"
	        			android:background="@color/grey2" />
					<TextView
					    android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
						android:id="@+id/word1"
						android:color="@color/grey2"
						android:layout_marginTop="15dp"
						android:layout_marginLeft="15dp"
						android:layout_marginRight="15dp"
						android:gravity="center" />
					<TextView
					    android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
						android:id="@+id/lang2"
						android:textStyle="bold"
						android:color="@color/grey2"
						android:paddingBottom="1dp"
						android:layout_marginTop="20dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="15dp"/>
					<ImageView
					    android:contentDescription="@string/app_name"
					    android:layout_width="fill_parent"
	        			android:layout_height="2dp"
	        			android:layout_marginLeft="15dp"
						android:layout_marginRight="15dp"
						android:layout_marginTop="1dp"
	        			android:background="@color/grey2" />
					<Button 
					    android:id="@+id/answerA"
					    android:layout_height="wrap_content"
					    android:layout_width="fill_parent"
					    android:layout_gravity="center"
					    android:layout_marginTop="15dp"
					    android:layout_marginLeft="20dp"
					    android:layout_marginRight="20dp" />
					<Button 
					    android:id="@+id/answerB"
					    android:layout_height="wrap_content"
					    android:layout_width="fill_parent"
					    android:layout_gravity="center"
					    android:layout_marginTop="15dp"
					    android:layout_marginLeft="20dp"
					    android:layout_marginRight="20dp" />
					<Button 
					    android:id="@+id/answerC"
					    android:layout_height="wrap_content"
					    android:layout_width="fill_parent"
					    android:layout_gravity="center"
					    android:layout_marginTop="15dp"
					    android:layout_marginLeft="20dp"
					    android:layout_marginRight="20dp" />
					<Button 
					    android:id="@+id/answerD"
					    android:layout_height="wrap_content"
					    android:layout_width="fill_parent"
					    android:layout_gravity="center"
					    android:layout_marginTop="15dp"
					    android:layout_marginLeft="20dp"
					    android:layout_marginRight="20dp" />
					<TextView
					    android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
						android:id="@+id/results"
						android:textStyle="bold"
						android:color="@color/grey2"
						android:paddingBottom="1dp"
						android:layout_marginTop="20dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="15dp"
						android:text="@string/result" />
					<ImageView
					    android:contentDescription="@string/app_name"
					    android:layout_width="fill_parent"
	        			android:layout_height="2dp"
	        			android:layout_marginLeft="15dp"
						android:layout_marginRight="15dp"
						android:layout_marginTop="1dp"
	        			android:background="@color/grey2" />
					<RelativeLayout 
					    android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
	        			android:layout_marginTop="20dp"
						android:layout_marginLeft="60dp"
						android:layout_marginRight="60dp">
					    <TextView
					    android:layout_width="wrap_content"
	        			android:layout_height="wrap_content"
						android:id="@+id/countcorrect"
						android:textStyle="bold"
						android:color="@color/grey2"
						android:layout_gravity="left"
						android:text=""
						android:layout_alignParentLeft="true"
						android:textColor="#008800" />
					    <TextView
					    android:layout_width="wrap_content"
	        			android:layout_height="wrap_content"
	        			android:layout_toRightOf="@id/countcorrect"
	        			android:layout_marginLeft="3dp"
						android:id="@+id/correcttext"
						android:textStyle="bold"
						android:color="@color/grey2"
						android:text="@string/correct"
						android:textColor="#008800" />
					    <TextView
					    android:layout_width="wrap_content"
	        			android:layout_height="wrap_content"
	        			android:layout_alignParentRight="true"
	        			android:layout_marginLeft="3dp"
						android:id="@+id/incorrecttext"
						android:textStyle="bold"
						android:color="@color/grey2"
						android:text="@string/incorrect"
						android:textColor="#880000" />
					    <TextView
					    android:layout_width="wrap_content"
	        			android:layout_height="wrap_content"
	        			android:layout_toLeftOf="@id/incorrecttext"
						android:id="@+id/countincorrect"
						android:textStyle="bold"
						android:color="@color/grey2"
						android:textColor="#880000" />					    
					</RelativeLayout>
					<TextView
					    android:layout_width="fill_parent"
	        			android:layout_height="wrap_content"
						android:id="@+id/wordstogo"
						android:textStyle="bold"
						android:color="@color/grey2"
						android:layout_margin="15dp"						
						android:gravity="center" />
			</LinearLayout>
		</ScrollView>
</LinearLayout>